{
  "name": "lawallet-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build --no-cache",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run build --filter={apps/web}"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "overrides": {
    "nostr-tools": "npm:@lawallet/nostr-tools"
  },
  "pnpm": {
    "overrides": {
      "nostr-tools": "npm:@lawallet/nostr-tools"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
