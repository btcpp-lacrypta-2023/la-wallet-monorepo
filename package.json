{
  "name": "lawallet-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web:start": "pnpm --filter lawallet-front start",
    "libs:build": "pnpm --filter @lawallet/hooks build && pnpm --filter @lawallet/utils build"
  },
  "devDependencies": {
    "@lawallet/eslint-config": "*",
    "@lawallet/typescript-config": "*",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "overrides": {
    "nostr-tools": "npm:@lawallet/nostr-tools"
  },
  "pnpm": {
    "overrides": {
      "nostr-tools": "npm:@lawallet/nostr-tools"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "config/*"
  ]
}
