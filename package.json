{
  "name": "lawallet-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "pnpm libs:build && turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web:dev": "pnpm --filter lawallet-front dev",
    "web:start": "pnpm --filter lawallet-front start",
    "libs:build": "pnpm --filter @lawallet/react build && pnpm --filter @lawallet/utils build",
    "docs:dev": "pnpm --filter docs dev"
  },
  "devDependencies": {
    "@lawallet/eslint-config": "^1.0.0",
    "@lawallet/typescript-config": "^1.0.0",
    "prettier": "^3.2.2",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "overrides": {
    "nostr-tools": "npm:@lawallet/nostr-tools"
  },
  "pnpm": {
    "overrides": {
      "nostr-tools": "npm:@lawallet/nostr-tools"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "config/*"
  ]
}