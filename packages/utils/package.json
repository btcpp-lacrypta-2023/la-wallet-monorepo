{
  "name": "@lawallet/utils",
  "version": "0.0.7",
  "description": "",
  "private": false,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "build": "pnpm run build:esm+types",
    "build:esm+types": "tsc --project ./tsconfig.build.json --outDir ./dist/esm --declaration --declarationMap --declarationDir ./dist/types",
    "clean": "rm -rf dist"
  },
  "author": "Ferpa",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@scure/base": "1.1.5",
    "@nostr-dev-kit/ndk": "^2.3.2",
    "bech32": "^2.0.0",
    "date-fns": "^3.2.0",
    "nostr-tools": "npm:@lawallet/nostr-tools@^1.17.0"
  },
  "overrides": {
    "nostr-tools": "npm:@lawallet/nostr-tools"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/esm/exports/index.js",
  "types": "./dist/types/exports/index.d.ts",
  "typings": "./dist/types/exports/index.d.ts",
  "files": [
    "dist/**",
    "!dist/**/*.tsbuildinfo",
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*.test-d.ts",
    "/actions",
    "/types"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/exports/index.d.ts",
      "default": "./dist/esm/exports/index.js"
    },
    "./actions": {
      "types": "./dist/types/exports/actions.d.ts",
      "default": "./dist/esm/exports/actions.js"
    },
    "./types": {
      "types": "./dist/types/exports/types.d.ts",
      "default": "./dist/esm/exports/types.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "actions": [
        "./dist/types/exports/actions.d.ts"
      ],
      "types": [
        "./dist/types/exports/types.d.ts"
      ]
    }
  }
}
